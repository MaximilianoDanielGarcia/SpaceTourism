---
interface Props {
	name: string;
	description: string;
	distance: string;
    travel: string;
}

const { name, description, distance, travel } = Astro.props;
---
<div class="tab-content">
    <article>
        <h2 id="tab-content-title">{name}</h2>
        <p id="tab-content-description">{description}</p>
    </article>
    <div class="footer-tab">
        <div class="atomic-data">
            <h3>AVG. Distance</h3>
            <p id="tab-content-distance">{distance}</p>
        </div>
        <div class="atomic-data">
            <h3>Est. Travel Time</h3>
            <p id="tab-content-travel">{travel}</p>
        </div>
    </div>
</div>

<style>

    .hidden {
        display: none !important;
    }

    .tab-content {
        width: 100%;
        height: 438px;
        display: flex;
        flex-direction: column;
        gap: 37px;
    }

    article {
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    article > h2 {
        color: white;
        font-family: 'Bellefair';
        font-size: 100px;
        font-weight: 400;
        text-transform: uppercase;
    }

    article > p {
        color: var(--color-text);
        font-family: 'Barlow';
        font-size: 18px;
        font-weight: 400;
        line-height: 32px;
    }

    .footer-tab {
        display: flex;
        align-items: end;
        height: 90px;
        gap: 68px;
        border-top: 1px solid #383B4B;
    }

    .atomic-data {
        display: flex;
        flex-direction: column;
        gap: 12px;

        & > h3 {
            color: var(--color-text);
            font-family: 'Barlow Condensed';
            font-size: 14px;
            font-weight: 400;
            letter-spacing: 2.362px;
            text-transform: uppercase;
        }

        & > p {
            color: #FFF;
            font-family: 'Bellefair';
            font-size: 28px;
            font-weight: 400;
            text-transform: uppercase;
        }
    }

    @media screen and (width <= 1350px) {
        .tab-content {
            justify-content: center;
            align-items: center;
            height: 323px;
            gap: 49px;
        }

        article {
            justify-content: center;
            align-items: center;
            text-align: center;
            gap: 8px;
        }

        article > h2 {
            font-size: 80px;
        }

        article > p {
            font-size: 16px;
            line-height: 28px;
        }

        .footer-tab {
            width: 100%;
            justify-content: space-evenly;
            text-align: center;
        }
    }

    @media screen and (width < 768px) {
        .tab-content {
            height: 409px;
            gap: 32px;
        }

        article {
            gap: 1px;
        }

        article > h2 {
            font-size: 56px;
        }

        article > p {
            font-size: 15px;
            line-height: 25px;
            height: 125px;
        }

        .footer-tab {
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 244px;
            gap: 32px;
        }
    }
</style>